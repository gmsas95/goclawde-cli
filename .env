# Jimmy.ai Environment Configuration
# Source this file: source .env

# ============================================
# LLM Provider Configuration (Required)
# ============================================

# Kimi (Moonshot AI) - Default provider
# Get your API key from: https://platform.moonshot.cn/
export GOCLAWDE_LLM_PROVIDERS_KIMI_API_KEY=sk-MFps5iI0DE5GX2NRIgv2CmifR2UIs69Ccjddjo0Al4e2Dg1O
export GOCLAWDE_LLM_PROVIDERS_KIMI_MODEL=kimi-k2.5
export GOCLAWDE_LLM_PROVIDERS_KIMI_BASE_URL=https://api.moonshot.cn/v1

# OpenRouter (Alternative provider)
# Get your API key from: https://openrouter.ai/
# export GOCLAWDE_LLM_PROVIDERS_OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
# export GOCLAWDE_LLM_PROVIDERS_OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# export GOCLAWDE_LLM_PROVIDERS_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Set default provider (kimi or openrouter)
export GOCLAWDE_LLM_DEFAULT_PROVIDER=kimi

# ============================================
# Server Configuration
# ============================================

# HTTP server bind address
export GOCLAWDE_SERVER_ADDRESS=0.0.0.0

# HTTP server port
export GOCLAWDE_SERVER_PORT=8080

# ============================================
# Storage Configuration
# ============================================

# Data directory path
export GOCLAWDE_STORAGE_DATA_DIR=~/.local/share/goclawde

# ============================================
# Security Configuration
# ============================================

# CORS allowed origins
export GOCLAWDE_SECURITY_ALLOW_ORIGINS=*

# ============================================
# Tool Configuration
# ============================================

# Enable/disable sandbox mode for tool execution
export GOCLAWDE_TOOLS_SANDBOX=true

# ============================================
# Skills Configuration
# ============================================

# GitHub Skill
export GOCLAWDE_SKILLS_GITHUB_TOKEN="${GITHUB_TOKEN}"

# Weather Skill
export GOCLAWDE_SKILLS_WEATHER_API_KEY="${WEATHER_API_KEY}"
